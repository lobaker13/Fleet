<p id="notice"><%= notice %></p>

<h1>Trips</h1>

<table>
  <thead>
    <tr>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th>Zipcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @group.trips.each do |trip| %>
      <tr>
        <td><%= trip.city %></td>
        <td><%= trip.state %></td>
        <td><%= trip.country %></td>
        <td><%= trip.longitude %></td>
        <td><%= trip.latitude %></td>
        <td><%= trip.zipcode %></td>
        <%# to do: add in the new helper paths (like Edit) %>
        <td><%= link_to 'Show', group_trip_path(@group, trip) %></td>
        <td><%= link_to 'Edit', edit_group_trip_path(@group,trip) %></td>
        <td><%= link_to 'Destroy', group_trip_path(@group,trip), method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Trip', new_group_trip_path(@group) %>
