<div id="users">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="field">
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
  </div>
  
  <div class="field">
    <%= f.text_field :fname, autofocus: true, placeholder: 'First Name' %>
    <%= f.text_field :lname, autofocus: true, placeholder: 'Last Name' %>
  </div>
  <div class="field">
    <%= f.text_field :username, autofocus: true, placeholder: 'Username' %>
    <%= f.email_field :email, autofocus: true, placeholder:'Email' %>
  </div>

  <div class="field">
    <%= f.text_area :bio, autofocus: true, placeholder: 'Tell us about yourself!' %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>

    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm Password' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
