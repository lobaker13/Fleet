<%= form_with(model: itinerary, url: url, local: true) do |form| %>
  <% if itinerary.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(itinerary.errors.count, "error") %> prohibited this itinerary from being saved:</h2>

      <ul>
      <% itinerary.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :itinerary_title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :itinerary_description %>
  </div>

  <div class="field">
    <%= form.label :start_time %>
    <%= form.datetime_select :start_time, id: :itinerary_start_time %>
  </div>

  <div class="field">
    <%= form.label :end_time %>
    <%= form.datetime_select :end_time, id: :itinerary_end_time %>
  </div>

  <div class="field">
    <%= form.label :color %>
    <%= form.select :color, ['Red', 'Yellow', 'Green', 'Blue', 'Orange', 'Purple', 'Gray', 'Magenta', 'Turquoise', 'Olive', 'Fuchsia', 'SkyBlue', 'Pink'  ], id: :itinerary_color, prompt: 'Select a Color' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
