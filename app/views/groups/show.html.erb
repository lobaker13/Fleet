<h2>
  <%= @group.name %>
</h2>

<p>
  <%= @group.description %>
</p>

<p>
Start:
  <%= @group.start %>
</p>

<p>
End:
  <%= @group.end %>
</p>

<div id="addPeople">
<h3>Add Your Friends!</h3>
<% current_user.friends.each do |friend| %>
<div class="friend">
	<div class="friendsPic" style="background-image: url('<%= friend.avatar.url %>');"></div>
	<%= link_to friend.fullname, profile_path(friend.username) %>
	<%= link_to "Remove Friend", remove_friend_path(friend.id, current_user.id) %>
	</div>
</div>
<% end %>

<%= link_to 'Edit', edit_group_path(@group) %> |
<%= link_to 'Back', groups_path %> |
<%= link_to 'Current Trips', group_trips_path(@group)%> |
<%= link_to 'New Trip', new_group_trip_path(@group) %>
